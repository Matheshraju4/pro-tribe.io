generator client {
  provider = "prisma-client-js"
  output   = "../prisma/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Trainer {
  id              String           @unique @id @default(uuid())
  name            String
  email           String            @unique
  mobileNumber    String
  password        String?
  isVerified      Boolean           @default(false)
  age             Int?
  gender          String?
  timezone        String?           @default("UTC")
  language        String?           @default("en")
  theme           String?           @default("system")
  emailNotifications Boolean?       @default(true)
  pushNotifications  Boolean?       @default(true)
  smsNotifications   Boolean?       @default(false)
  // subscription Subscription[]
  publicPage      PublicPage?
  businessDetails BusinessDetails[]
  sessions        Session[]
  clients         Client[]
  packages        Package[]
  progressTrackers ProgressTracker[]
  appointments    Appointment[]
  availability    TrainerAvailability[]
  memberships     Membership[]
  discounts       Discount[]
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
}

model PublicPage {
  id                       String  @id @default(uuid())
  trainerId                String @unique
  BusinessLogo             String?
  BusinessBanner           String?
  BusinessName             String
  BusinessShortDescription String?
  BannerHeading            String?
  BannerSubHeading         String?
  YearsOfExperience        String?
  HappyClients             String?
  BusinessDescription      String?
  Programs                 String?
  uniqueUrl                String  @unique
  BusinessEmail            String?
  BusinessPhone            String?
  CustomWebsiteUrl         String?
  BusinessAddress          String?
  BusinessCity             String?

  trainer   Trainer  @relation(fields: [trainerId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Subscription {
  Active
  Inactive
}

model BusinessDetails {
  id                  String   @id @default(uuid())
  trainerId           String
  businessName        String?
  businessAddress     String?
  businessPhone       String?
  businessEmail       String?
  businessWebsite     String?
  businessDescription String?
  businessLogo        String?
  businessBanner      String?
  trainer             Trainer  @relation(fields: [trainerId], references: [id])
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
}

model Session {
  id                       String                     @id @default(uuid())
  sessionName              String
  sessionDescription       String?
  sessionDuration          String?
  sessionLocation          String?
  sessionType              SessionType
  sessionTag               Tag[]
  sessionMaxCapacity       Int?
  sessionFrequency         SessionFrequency?
  sessionDateAndTime       SessionDateAndTime[]
  sessionPrice             String?
  bufferTime               String?
  sessionDate              DateTime?
  sessionStartDate         DateTime?
  sessionEndDate           DateTime?
  sessionValidity          DateTime?
  isActive                 Boolean                    @default(true)
  trainerId                String
  trainer                  Trainer                    @relation(fields: [trainerId], references: [id])
  sessionPackageConnection SessionPackageConnection[]
  membershipSessionConnection MembershipSessionConnection[]
  discountSessionConnection DiscountSessionConnection[]
  appointments             Appointment[]
  createdAt                DateTime                   @default(now())
  updatedAt                DateTime                   @updatedAt
}

model Package {
  id                       String                     @id @default(uuid())
  packageName              String
  packageDescription       String?
  packagePrice             String?
  packageDiscount          String?
  validDays                String?
  acceptedPaymentMethod    String[]
  sessionPackageConnection SessionPackageConnection[]
  discountPackageConnection DiscountPackageConnection[]
  createdAt                DateTime                   @default(now())
  updatedAt                DateTime                   @updatedAt
  trainerId                String
  trainer                  Trainer                    @relation(fields: [trainerId], references: [id])
}

model SessionPackageConnection {
  id        String   @id @default(uuid())
  packageId String
  package   Package  @relation(fields: [packageId], references: [id])
  sessionId String
  session   Session  @relation(fields: [sessionId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Appointment {
  id                     String            @id @default(uuid())
  appointmentName        String
  appointmentDescription String?
  appointmentDate        DateTime?
  appointmentPrice       String?
  location               String?
  meetingUrl             String?
  startTime              String?
  endTime                String?
  appointpaidStatus      AppointpaidStatus
  status                 AppointmentStatus
  appointmentLocation    String
  
  // Relationships
  trainerId              String
  trainer                Trainer           @relation(fields: [trainerId], references: [id])
  clientId               String?
  client                 Client?           @relation(fields: [clientId], references: [id])
  sessionId              String?
  session                Session?          @relation(fields: [sessionId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum AppointpaidStatus {
  Paid
  Unpaid
}

enum AppointmentStatus {
  Scheduled
  Cancelled
  Completed
}

enum SessionType {
  OneToOne
  Group
}

enum SessionFrequency {
  OneTime
  Recurring
}

model Tag {
  id        String   @id @default(uuid())
  tag       String
  sessionId String
  session   Session  @relation(fields: [sessionId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model SessionDateAndTime {
  id          String  @id @default(uuid())
  selectedDay WeekDay
  startTime   String
  endTime     String
  sessionId   String
  session     Session @relation(fields: [sessionId], references: [id])
}

enum WeekDay {
  Monday
  Tuesday
  Wednesday
  Thursday
  Friday
  Saturday
  Sunday
}

model TrainerAvailability {
  id        String   @id @default(uuid())
  trainerId String
  trainer   Trainer  @relation(fields: [trainerId], references: [id], onDelete: Cascade)
  dayOfWeek WeekDay
  startTime String   // Store as "HH:MM" format (e.g., "10:00")
  endTime   String   // Store as "HH:MM" format (e.g., "19:00")
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([trainerId, dayOfWeek])
  @@index([trainerId])
}

model Membership {
  id                          String                        @id @default(uuid())
  membershipName              String
  membershipDescription       String?
  billingPeriod               BillingPeriod                 // Weekly, Monthly, Yearly
  weeklyPrice                 String?
  monthlyPrice                String?
  yearlyPrice                 String?
  autoRenewal                 Boolean                       @default(false)
  visibility                  MembershipVisibility          @default(Private)
  isActive                    Boolean                       @default(true)
  
  // Relationships
  trainerId                   String
  trainer                     Trainer                       @relation(fields: [trainerId], references: [id], onDelete: Cascade)
  membershipSessionConnection MembershipSessionConnection[]
  
  createdAt                   DateTime                      @default(now())
  updatedAt                   DateTime                      @updatedAt

  @@index([trainerId])
}

model MembershipSessionConnection {
  id           String     @id @default(uuid())
  membershipId String
  membership   Membership @relation(fields: [membershipId], references: [id], onDelete: Cascade)
  sessionId    String
  session      Session    @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt

  @@unique([membershipId, sessionId])
  @@index([membershipId])
  @@index([sessionId])
}

enum BillingPeriod {
  Weekly
  Monthly
  Yearly
}

enum MembershipVisibility {
  Public      // Visible on public page
  Private     // Only visible to specific clients
}

model Discount {
  id              String                    @id @default(uuid())
  code            String                    @unique
  name            String
  description     String?
  type            DiscountType              // Percentage or Fixed
  value           String                    // Discount value (percentage or fixed amount)
  startDate       DateTime
  endDate         DateTime
  usageLimit      Int?                      // null means unlimited
  currentUsage    Int                       @default(0)
  minAmount       String?                   // Minimum purchase amount to apply discount
  isActive        Boolean                   @default(true)
  
  // Relationships
  trainerId       String
  trainer         Trainer                   @relation(fields: [trainerId], references: [id], onDelete: Cascade)
  discountPackageConnection DiscountPackageConnection[]
  discountSessionConnection DiscountSessionConnection[]
  
  createdAt       DateTime                  @default(now())
  updatedAt       DateTime                  @updatedAt

  @@index([trainerId])
  @@index([code])
}

model DiscountPackageConnection {
  id         String   @id @default(uuid())
  discountId String
  discount   Discount @relation(fields: [discountId], references: [id], onDelete: Cascade)
  packageId  String
  package    Package  @relation(fields: [packageId], references: [id], onDelete: Cascade)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([discountId, packageId])
  @@index([discountId])
  @@index([packageId])
}

model DiscountSessionConnection {
  id         String   @id @default(uuid())
  discountId String
  discount   Discount @relation(fields: [discountId], references: [id], onDelete: Cascade)
  sessionId  String
  session    Session  @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([discountId, sessionId])
  @@index([discountId])
  @@index([sessionId])
}

enum DiscountType {
  Percentage
  Fixed
}

model Client {
  id            String    @id @default(uuid())
  firstName     String
  lastName      String
  email         String    @unique
  password      String?
  isVerified    Boolean   @default(false)
  phone         String?
  company       String?
  address       String?
  city          String?
  postcode      String?
  country       String?
  tags          String[]
  trainerId     String
  trainer       Trainer   @relation(fields: [trainerId], references: [id])
  clientProgress ClientProgress[]
  appointments  Appointment[]
  purchases     Purchase[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model ProgressTracker {
  id            String    @id @default(uuid())
  name          String
  description   String?
  type          String    // "numeric", "boolean", "rating"
  
  // Numeric tracker fields
  unit          String?
  minValue      Float?
  maxValue      Float?
  
  // Boolean tracker fields
  trueLabel     String?   @default("Yes")
  falseLabel    String?   @default("No")
  
  // Rating tracker fields
  ratingScale   Int?      @default(5)
  
  // Configuration stored as JSON for flexibility
  configuration Json?
  
  // Relationships
  trainerId     String
  trainer       Trainer   @relation(fields: [trainerId], references: [id])
  
  // Many-to-many relationship with clients through junction table
  clientProgress ClientProgress[]
  
  // Metadata
  isActive      Boolean   @default(true)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model ClientProgress {
  id                String    @id @default(uuid())
  
  // Relationships
  trackerId         String
  tracker           ProgressTracker @relation(fields: [trackerId], references: [id], onDelete: Cascade)
  
  clientId          String
  client            Client    @relation(fields: [clientId], references: [id], onDelete: Cascade)
  
  // Progress entries for this specific client-tracker combination
  entries           ProgressEntry[]
  
  // Assignment metadata
  assignedAt        DateTime  @default(now())
  isActive          Boolean   @default(true)
  
  // Ensure unique client-tracker combinations
  @@unique([trackerId, clientId])
  @@index([clientId])
  @@index([trackerId])
}

model ProgressEntry {
  id                String    @id @default(uuid())
  
  // Progress data - stored as JSON to handle different types
  value             Json      // Can be number, boolean, or string based on tracker type
  
  // Optional text note
  note              String?
  
  // Relationships
  clientProgressId  String
  clientProgress    ClientProgress @relation(fields: [clientProgressId], references: [id], onDelete: Cascade)
  
  // Metadata
  entryDate         DateTime  @default(now())
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  
  // Indexes for better query performance
  @@index([clientProgressId, entryDate])
  @@index([entryDate])
}

model Purchase {
  id                String         @id @default(uuid())
  
  // Client information
  clientId          String
  client            Client         @relation(fields: [clientId], references: [id], onDelete: Cascade)
  
  // Trainer information
  trainerId         String
  
  // Purchase details
  itemType          PurchaseType   // Session or Package
  itemId            String         // ID of the session or package
  itemName          String         // Name of the session or package
  itemDescription   String?        // Description
  
  // Pricing
  originalPrice     String
  discountAmount    String?
  finalPrice        String
  
  // Payment
  paymentStatus     PaymentStatus  @default(Pending)
  paymentMethod     String?
  transactionId     String?        @unique
  
  // Status
  status            PurchaseStatus @default(Active)
  
  // Validity (for packages)
  validFrom         DateTime       @default(now())
  validUntil        DateTime?
  
  // Sessions remaining (for packages)
  sessionsTotal     Int?
  sessionsUsed      Int?           @default(0)
  sessionsRemaining Int?
  
  // Metadata
  purchaseDate      DateTime       @default(now())
  createdAt         DateTime       @default(now())
  updatedAt         DateTime       @updatedAt
  
  @@index([clientId])
  @@index([trainerId])
  @@index([itemType, itemId])
  @@index([purchaseDate])
}

enum PurchaseType {
  Session
  Package
  Membership
}

enum PaymentStatus {
  Pending
  Paid
  Failed
  Refunded
}

enum PurchaseStatus {
  Active
  Completed
  Expired
  Cancelled
}
